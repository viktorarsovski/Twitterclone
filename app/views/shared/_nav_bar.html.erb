<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notificaton is-primart global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-dark">
      <div class="fab fa-twitter icon is-large"></div>
      <div class="navbar-brand"></div>
      <%= link_to root_path, class: "navbar-item" do %>
        <div class="title is-5 button is-info">Twitter</div>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
      </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
        <div class="field is-grouped">
           <p class="control">
            <% if logged_in? %>
            <%= link_to 'New Tweet', new_tweet_path, class: "button is-info is-rounded" %>
            <%= link_to "Log Out", logout_path, method: :delete, class: "button is-danger is-rounded" %>
            <% else %>
              <%= link_to "Log In", login_path, class: "button is-link is-inverted is-rounded" %>
              <%= link_to "Sign Up", users_signup_path, class: "button is-link is-rounded" %>
            <% end %>
           </p>
        </div>
      </div>
    </div>
  </nav>
  </body>
</html>